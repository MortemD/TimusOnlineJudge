import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = in.nextInt();
        int sum = n;

        if (n <= 0)
            while (n!=1) {
                n++;
                sum += n;
            }

        if(n >= 1)
            while (n!=1) {
                n--;
                sum += n;
            }

        System.out.println(sum);
    }
}
